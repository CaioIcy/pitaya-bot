{
  "numberOfInstances": 1,
  "preRun": {
    "function": "initializeDb"
  },
  "sequentialOperations": [
    {
      "request": "connector.playerHandler.create",
      "expect": {
        "$response.code": {
          "type": "string",
          "value": "200"
        } 
      },
      "store": {
        "playerAccessToken": {
          "type": "string",
          "value": "$response.player.accessToken"
        }
      }
    },
    {
      "function": "reconnect"
    },
    {
      "request": "connector.playerHandler.authenticate",
      "args": { 
        "accessToken": { 
          "type": "string", 
          "value": "$store.playerAccessToken"
        } 
      },
      "expect": { 
        "$response.code": {
          "type": "string",
          "value": "200" 
        },
        "$response.player.accessToken": {
          "type": "string",
          "value": "$store.playerAccessToken"
        }
      }
    }
  ],
  "postRun": {
    "function": "saveToFile"
  }
}
